{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react",
    "jsxFactory": "elements.createElement",
    "allowJs": true,
    "paths": {
      "elysiahyperkit": ["./node_modules/elysiahyperkit/dist/index.js"],
      "elysiahyperkit/*": ["./node_modules/elysiahyperkit/dist/*"]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
  }
}
